  // Auto format
  "coc.preferences.formatOnSaveFiletypes": [
    "python",
    "python.django",
    "html",
    "htmldjango",
    "django-html",
    "css",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "typescript.tsx",
    "graphql",
    "yaml",
    "json",
    "jsonc",
    "markdown"
  ],

  // snippets
  "snippets.userSnippetsDirectory": "~/.config/nvim/snips",
  "snippets.loadFromExtensions": true,
  "snippets.ultisnips.enable": true,
  "snippets.snipmate.enable": false,
  // VS Code snippets
  //  - Ubuntu:  "~/.config/Code/User/snippets"
  //  - macOS:   "~/Library/Application Support/Code/User/snippets"
  "snippets.textmateSnippetsRoots": ["~/.config/nvim/snips"],

  // emmet
  "emmet.showExpandedAbbreviation": "always",
  "emmet.showAbbreviationSuggestions": true,
  "emmet.includeLanguages": {
    "htmldjango": "html",
    "django-html": "html",
    "python.django": "python",
    "vue-html": "html",
    "javascript": "javascriptreact"
  },

  "suggest.echodocSupport": true,
  "suggest.maxCompleteItemCount": 20,
  "suggest.noselect": false,

  // diagnostics
  "diagnostic.errorSign": " ",
  "diagnostic.warningSign": " ",
  "diagnostic.infoSign": "",
  "diagnostic.hintSign": " ",

  // Python: https://github.com/neoclide/coc-python
  "python.formatting.provider": "autopep8",
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.linting.pylintArgs": ["--disable=F401, E722, C0116, C0115, W0613"],
  "python.linting.mypyArgs": [
    "--ignore-missing-imports",
    "--follow-imports=silent",
    "--show-column-numbers"
  ],
  "python.linting.ignorePatterns": [".vscode/*.py", "**/site-packages/**/*.py"],

  // coc-pyright
  // "python.analysis.autoImportCompletions": true,
  // "python.analysis.autoSearchPaths": true,
  // "python.analysis.diagnosticMode": "workspace",
  // "python.pythonPath": "/Users/alanjui/.pyenv/versions/3.9.1/bin/python",
  // "python.venvPath": "/Users/alanjui/.pyenv/versions/3.9.1/envs",
  // "python.venvFolders": ["venv-3.9.1", ".venv", "venv"],
  "pyright.disableCompletion": false,
  "pyright.disableLanguageServices": false,
  "pyright.disableOrganizeImports": false,

  // Language Servers
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    }
  }
}
